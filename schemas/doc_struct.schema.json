{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "doc_struct.schema.json",
  "title": "DocStruct",
  "type": "object",
  "required": ["job_id", "files", "valid"],
  "properties": {
    "job_id": {"type": "string"},
    "valid": {"type": "boolean"},
    "missing": {
      "type": "array",
      "items": {"type": "string"}
    },
    "files": {
      "type": "object",
      "description": "Dynamic slots keyed by language_version (e.g., arabic_v1, fr_v2, zh_v1)",
      "additionalProperties": {"$ref": "#/$defs/fileStruct"}
    }
  },
  "$defs": {
    "fileStruct": {
      "type": ["object", "null"],
      "properties": {
        "path": {"type": "string"},
        "name": {"type": "string"},
        "structure": {"type": "object"}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
