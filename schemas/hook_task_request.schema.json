{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "hook_task_request.schema.json",
  "title": "HookTaskRequest",
  "type": "object",
  "required": [
    "message",
    "agentId",
    "sessionKey",
    "deliver",
    "wakeMode",
    "meta"
  ],
  "properties": {
    "message": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "agentId": {
      "type": "string"
    },
    "sessionKey": {
      "type": "string"
    },
    "wakeMode": {
      "type": "string",
      "enum": [
        "now",
        "next-heartbeat"
      ]
    },
    "deliver": {
      "type": "boolean"
    },
    "model": {
      "type": "string"
    },
    "timeoutSeconds": {
      "type": "number"
    },
    "meta": {
      "type": "object",
      "required": [
        "job_id",
        "root_path",
        "review_dir"
      ],
      "properties": {
        "job_id": {
          "type": "string"
        },
        "root_path": {
          "type": "string"
        },
        "review_dir": {
          "type": "string"
        },
        "task_type": {
          "type": "string",
          "enum": [
            "REVISION_UPDATE",
            "NEW_TRANSLATION",
            "BILINGUAL_REVIEW",
            "EN_ONLY_EDIT",
            "MULTI_FILE_BATCH"
          ]
        },
        "candidate_files": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "path"
            ],
            "properties": {
              "path": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "language": {
                "type": "string"
              },
              "version": {
                "type": "string"
              },
              "role": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        },
        "files": {
          "type": "object",
          "description": "Dynamic slots keyed by language_version (e.g., arabic_v1, fr_v2, zh_v1)",
          "additionalProperties": {
            "type": ["object", "null"]
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
