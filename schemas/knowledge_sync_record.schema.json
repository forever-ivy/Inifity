{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "knowledge_sync_record.schema.json",
  "title": "KnowledgeSyncRecord",
  "type": "object",
  "required": ["path", "mtime_ns", "size_bytes", "sha256", "parser", "source_group", "chunk_count", "indexed_at"],
  "properties": {
    "path": {"type": "string"},
    "mtime_ns": {"type": "integer"},
    "size_bytes": {"type": "integer"},
    "sha256": {"type": "string"},
    "parser": {"type": "string"},
    "source_group": {
      "type": "string",
      "enum": ["glossary", "previously_translated", "arabic_source", "translated_en", "general"]
    },
    "chunk_count": {"type": "integer"},
    "indexed_at": {"type": "string"}
  }
}
