{
  "permissions": {
    "allow": [
      "Bash(.venv/bin/python:*)",
      "Bash(.venv/bin/pip:*)",
      "Bash(openclaw:*)",
      "Bash(./scripts/*.sh)",
      "WebSearch",
      "WebFetch"
    ]
  },
  "agentTeams": {
    "enabled": true,
    "defaultMode": "coordinate",
    "teammates": [
      {
        "id": "translator",
        "role": "Translation Orchestrator",
        "description": "Responsible for translation pipeline, LLM agent calls (Codex/Gemini/GLM), multi-round translation workflow, and intent classification.",
        "focusAreas": [
          "scripts/openclaw_translation_orchestrator.py",
          "scripts/v4_pipeline.py",
          "LLM prompt engineering",
          "Translation round logic",
          "Candidate selection and scoring"
        ],
        "tools": ["Read", "Edit", "Write", "Grep", "Glob", "Bash"]
      },
      {
        "id": "format-specialist",
        "role": "Format Preservation Specialist",
        "description": "Responsible for DOCX/XLSX format preservation, structure extraction, translation maps, and artifact writing.",
        "focusAreas": [
          "scripts/docx_preserver.py",
          "scripts/xlsx_preserver.py",
          "scripts/openclaw_artifact_writer.py",
          "scripts/extract_docx_structure.py",
          "Format fidelity and layout preservation"
        ],
        "tools": ["Read", "Edit", "Write", "Grep", "Glob", "Bash"]
      },
      {
        "id": "qa-engineer",
        "role": "Quality Assurance Engineer",
        "description": "Responsible for quality gates, vision QA (Gemini Vision for format checking), markdown sanity checks, and convergence validation.",
        "focusAreas": [
          "scripts/openclaw_quality_gate.py",
          "scripts/format_qa_vision.py",
          "scripts/docx_qa_vision.py",
          "Quality thresholds and metrics",
          "Vision QA retry logic"
        ],
        "tools": ["Read", "Edit", "Write", "Grep", "Glob", "Bash"]
      },
      {
        "id": "pipeline-infra",
        "role": "Pipeline Infrastructure Engineer",
        "description": "Responsible for message routing, Telegram bot, email ingest, KB sync/retrieve, runtime state management, and SQLite database.",
        "focusAreas": [
          "scripts/telegram_bot.py",
          "scripts/skill_message_ingest.py",
          "scripts/skill_message_router.py",
          "scripts/skill_approval.py",
          "scripts/v4_kb.py",
          "scripts/v4_runtime.py",
          "scripts/openclaw_v4_dispatcher.py"
        ],
        "tools": ["Read", "Edit", "Write", "Grep", "Glob", "Bash"]
      },
      {
        "id": "tester",
        "role": "Test Engineer",
        "description": "Responsible for writing and running tests, test coverage, regression testing, and validation of bug fixes.",
        "focusAreas": [
          "tests/",
          "Test fixtures and mocks",
          "Unit test coverage",
          "Integration testing",
          "Regression prevention"
        ],
        "tools": ["Read", "Edit", "Write", "Grep", "Glob", "Bash"]
      }
    ],
    "coordinationRules": {
      "sharedContext": true,
      "taskHandoff": "explicit",
      "conflictResolution": "ask-user",
      "maxParallelAgents": 3
    }
  }
}
